@model IEnumerable<Project_NZWalks.UI.Models.DTO.RegionDto>
@{
}

<h1 class="mt-3">Regions</h1>

<div class=" d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
    {
        <tr>
                <th>@region.Id</th>
                <th>@region.Code</th>
                <th>@region.Name</th>
                <th>
                    <a asp-controller="Regions" asp-action="Edit" 
                    asp-route-id="@region.Id" class="btn btn-light">Edit</a>
                </th>
            </tr>
    }
    </tbody>
</table>
